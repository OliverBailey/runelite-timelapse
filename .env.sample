# RuneLite Timelapse Creator - Configuration Template
# Copy this file to .env and update the values with your own settings

# Path to your RuneLite screenshots directory
# Example (Windows): C:/Users/YourName/.runelite/screenshots/YourCharacterName
# Example (Linux): /home/username/.runelite/screenshots/YourCharacterName
# Example (WSL): /mnt/c/Users/YourName/.runelite/screenshots/YourCharacterName
SCREENSHOTS_DIR=/path/to/.runelite/screenshots/YourCharacterName

# Video framerate (frames per second)
# Lower value = slower video. Recommended: 5-10
FRAMERATE=5

# Output video framerate (for smooth playback)
# Higher = smoother playback. Recommended: 25-60
# This is different from FRAMERATE - it controls playback smoothness
# while FRAMERATE controls how fast screenshots advance
OUTPUT_FPS=30

# Output video resolution
# All screenshots will be scaled to this resolution
# Default: 1920x1080 (Full HD)
OUTPUT_WIDTH=1920
OUTPUT_HEIGHT=1080

# Music file to add to the timelapse (optional)
# Set to empty string or comment out if you don't want music
# The file should be in the same directory as the script
MUSIC_FILE=Sea_Shanty_2.mp3

# Output video filename
OUTPUT_VIDEO=account_timelapse.mp4 

# Video encoding settings
# Options: auto, nvidia, amd, intel, cpu
# - auto: Automatically detect and use GPU if available, fallback to CPU
# - nvidia: Use NVIDIA GPU (h264_nvenc)
# - amd: Use AMD GPU (h264_amf)
# - intel: Use Intel GPU (h264_qsv)
# - cpu: Use CPU encoding (slower but most compatible)
VIDEO_ENCODER=auto

# Video quality setting
# For GPU encoders (0-51): lower = better quality, 20-28 recommended
# For CPU encoder (0-51): lower = better quality, 18-23 recommended
# Higher values = smaller file size but worse quality
# Leave empty for encoder defaults
VIDEO_QUALITY=23

# Blur chatbox settings (to hide sensitive chat messages)
# Set BLUR_ENABLED=false to disable blurring
# NOTE: Coordinates are based on RuneLite fixed mode (765x503) and will be
# automatically scaled to match your OUTPUT_WIDTH and OUTPUT_HEIGHT
BLUR_ENABLED=true
BLUR_X=15
BLUR_Y=320
BLUR_WIDTH=310
BLUR_HEIGHT=70
BLUR_AMOUNT=15

# If true: Music plays once, video holds last frame to match music length
# If false: Music loops and gets cut to match video length
HOLD_LAST_FRAME=true
